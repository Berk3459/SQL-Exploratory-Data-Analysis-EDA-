/* this script is going to redefine the bronze tables if you run it*/

-- if silver.sales table already exists,it is going to be dropped
  IF OBJECT_ID ('silver.sales','U') IS NOT NULL
	DROP TABLE silver.sales;

CREATE TABLE silver.sales (
	invoice_no NVARCHAR(15),
	customer_id NVARCHAR(15),
	category NVARCHAR(50),
	quantity INT,
	price INT,
	invoice_date DATE,
	shopping_mall NVARCHAR(50)
	);
--if silver.customer table already exists,it is going to be dropped
IF OBJECT_ID ('silver.customer','U') IS NOT NULL
	DROP TABLE silver.customer;

CREATE TABLE silver.customer (
	customer_id NVARCHAR(50),
	gender NVARCHAR(10),
	age INT,
	payment_method NVARCHAR(20)

);
